<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brassheroes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_brass_heroes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_brass_heroes_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.StartActivity" />
        <activity android:name=".main.FightActivity" />
        <activity android:name=".main.MapActivity" />
        <activity android:name=".main.StoryActivity" />
        <activity android:name=".main.PlayerActivity" />
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.brassheroes.gamemechanics.BackgroundSoundService"
            android:enabled="true" />
    </application>

</manifest>