<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape>
            <stroke
                android:width="4dp"
                android:color="@color/goldYellow" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="1dp" />
            <gradient
                android:angle="180"
                android:centerColor="@color/btnCenter"
                android:endColor="@color/btnSides"
                android:startColor="@color/btnSides" />
        </shape>
    </item>

</layer-list>