<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_gradient1</item>
        <item name="buttonStyle">@style/defaultButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/cinzel_family</item>
    </style>

    <!--below styling default button-->
    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gradient</item>
    </style>
</resources>